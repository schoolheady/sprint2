#include<stdio.h>
#include<math.h>

float IntToFloat(int num1, int num2, float Value){
    int Length = 0;
    int tempNum = num2;
    while(tempNum != 0) {
        tempNum /= 10;
        Length++;
    }
    Value = num1 + (float)num2 / pow(10, Length);

    return Value;
}

int main() {	
    int num1 = 99;
    int num2 = 22;
    float Value = 0;

    Value = IntToFloat(num1,num2,Value);

    printf("result : %.2f\n", Value);

}
